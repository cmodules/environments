{
  "$id": "https://github.com/cmodules/environs",

  "description": "JSON Schema for build environments.",
  "type": "object",
  "contentEncoding": "utf-8",
  "required": [ "environments", "version" ],

  "properties": {

    "environments": {

      "type": "array",
      "description": "An array of environments."

    },

    "version": {

      "type": "object",
      "description": "Version number of this environment preset.",

      "required": ["major", "minor", "patch"],

      "properties": {
        "major": {"type": ["number", "string"], "description": "Environment preset semantic version (major).", "minimum": 0},
        "minor": {"type": ["number", "string"], "description": "Environment preset semantic version (minor)."},
        "patch": {"type": ["number", "string"], "description": "Environment preset semantic version (patch)."},
        "tweak": {"type": ["number", "string", "null"], "description": "Environment preset semantic version (tweak)."}
      }
    }
  }

}
