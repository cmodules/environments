{
  // "$schema": "https://github.com/cmodules/environs#",
  "version": 2,
  "environmentPresets": [
    {
      "name": "base",
      "flags": {
        "ALL": "--all",
        "HELP": "--help",
        "IGNORE": "--ignore",
        "LIST": "--list",
        "OUTPUT": "--output",
        "PRESET": "--preset",
        "PROFILE": "--profile=${USER}",
        "QUIET": "--quiet",
        "RECURSE": "--recurse",
        "RECURSIVE": "--recursive",
        "SYNC": "--sync",
        "VERBOSE": "--verbose",
        "VERSION": "--version"
      },
      "variables": {},
      "utilities": {
        "EOL": "lf",
        "PATH_SEPERATOR": ":"
      }
    },
    {
      "name": "win32",
      "inherits": ["base"],
      "binaries": {
        "CMD": "cmd",
        "PWSH": "pwsh",
        "MSVC": "msvc"
      },
      "commands": {
        // Common commands
        "PROMPT": "$binaries{CMD}",
        "RM": "Remove-Item"
      },
      "variables": {
        "WIN32": true
      },
      "utilities": {
        "EOL": "crlf",
        "PATH_SEPERATOR": ";"
      }
    },
    {
      "name": "unix",
      "inherits": ["base"],
      "binaries": {
        // Common commands
        "CP": "cp",
        "LN": "ln",
        "LS": "ls",
        "RM": "rm"
      },
      "variables": {}
    },
    {
      "name": "unix", // this duplicated entry *should* be failing!
      "inherits": ["base"],
      "binaries": {
        // Common commands
        "CP": "cp",
        "LN": "ln",
        "LS": "ls",
        "RM": "rm"
      },
      "variables": {}
    }
  ]
}
