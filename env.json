{
  // "$schema": "https://raw.githubusercontent.com/cmodules/environments/main/env.schema.json#",
  "version": 1,
  "environmentPresets": [
    {
      "name": "base",
      "variables": {
        "WIN32": true,
        "ALL": "--all",
        "HELP": "--help",
        "IGNORE": "--ignore",
        "LIST": "--list",
        "OUTPUT": "--output",
        "PRESET": "--preset",
        "PROFILE": "--profile=${USER}",
        "QUIET": "--quiet",
        "RECURSE": "--recurse",
        "RECURSIVE": "--recursive",
        "SYNC": "--sync",
        "VERBOSE": "--verbose",
        "VERSION": "--version",
        // Binaries
        "AR": "ar",
        "AS": "as",
        "CC": "cc",
        "CPP": "cpp",
        "CXX": "c++",
        "LD": "ld",
        "MT": "mt",
        "NM": "nm",
        "RANLIB": "ranlib",
        "RC": "rc",
        "RM": "rm",
        // Binary flags
        "ARFLAGS": "-rv",
        "ASFLAGS": "",
        "CFLAGS": "",
        "CPPFLAGS": "",
        "CXXFLAGS": "",
        "LDFLAGS": "",
        // Definitions
        "DEFINES": [],
        "DEFINES_DEBUG": [],
        "DEFINES_RELEASE": "-DBUILD_TYPE=Release",
        // Paths
        "BINDIR": "/usr/bin",
        "LIBDIR": "/usr/lib",
        "INSTALL_BINDIR": "/usr/local/bin",
        "INSTALL_LIBDIR": "/usr/local/lib",
        "PATH": [
          "/usr/local/bin",
          "/usr/bin",
          "/bin",
          "/c/Windows/System32",
          "/c/Windows",
          "/c/Windows/System32/Wbem",
          "/c/Windows/System32/WindowsPowerShell/v1.0/",
          "/usr/bin/site_perl",
          "/usr/bin/vendor_perl",
          "/usr/bin/core_perl"
        ],
        // Utils
        "EOL": "lf",
        "EDITOR": "code",
        "SHELL": "bash",
        "PATH_SEPERATOR": ":",
        "SUFFIXES": [
          ".out",
          ".a",
          ".ln",
          ".o",
          ".c",
          ".cc",
          ".C",
          ".cpp",
          ".p",
          ".f",
          ".F",
          ".m",
          ".r",
          ".y",
          ".l",
          ".ym",
          ".yl",
          ".s",
          ".S",
          ".mod",
          ".sym",
          ".def",
          ".h",
          ".info",
          ".dvi",
          ".tex",
          ".texinfo",
          ".texi",
          ".txinfo",
          ".w",
          ".ch",
          ".web",
          ".sh",
          ".elc",
          ".el"
        ]
      }
    },
    {
      "name": "win32",
      "inherits": ["base"],
      "variables": {
        "CMD": "cmd",
        "PWSH": "pwsh",
        "MSVC": "msvc",
        "PROMPT": "${CMD}",
        "RM": "Remove-Item"
      }
    },
    {
      "name": "unix",
      "inherits": ["base"],
      "variables": {
        // Common commands
        "CP": "cp",
        "LN": "ln",
        "LS": "ls",
        "RM": "rm"
      }
    },
    {
      "name": "unix", // this duplicated entry *should* be failing!
      "inherits": ["base"],
      "variables": {
        // Common commands
        "CP": "cp",
        "LN": "ln",
        "LS": "ls",
        "RM": "rm"
      }
    }
  ]
}
